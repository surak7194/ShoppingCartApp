@model ShoppingCart.DataAccess.ViewModels.CategoryVM

@{
    ViewData["Title"] = "Index";
}

<div class="container p-4">
    <div class="row p-3">
        <div class="col-6">
            <h2 class="text-primary">List of Categories</h2>
        </div>
        <div class="col-6 text-end">
            <a class="btn btn-primary" asp-action="CreateUpdate" asp-controller="Category"><i class="bi bi-plus-circle">&nbsp;Create New Category</i></a>
        </div>
    </div>

</div>
<table class="table table-bordered table-striped" style="width:100%" >
    <thead>
        <tr>
            <th>Category Name</th>
            <th>Display Order</th>
            <th>Action</th>


        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.categories) {
            <tr>
                <td>@item.Name</td>
                <td>@item.DisplayOrder</td>
            
            
           <td role="group">
                    <a asp-action="CreateUpdate" asp-controller="category" asp-route-id="@item.Id"><i class="btn btn-warning">Edit</i></a>&nbsp;
                    <a asp-action="Delete" asp-controller="category" asp-route-id="@item.Id"><i class="btn btn-danger">Delete</i></a>
               </td>
               
               
            </tr>
            }
            
        

    </tbody>
</table>
